  "standard_patterns": {
    "short_range": {
      "description": "Short ID range for quick processing",
      "validation_rules": {
        "min_digits": 6,
        "max_digits": 10,
        "prefix_required": true
      },
      "use_cases": ["Small organizations", "Simple tracking", "Quick validation"],
      "examples": {
        "valid": ["ABC 123456", "ABC 1234567890"],
        "invalid": ["ABC 12345", "ABC 12345678901"]
      }
    },

    "medium_range": {
      "description": "Medium ID range for standard processing",
      "validation_rules": {
        "min_digits": 8,
        "max_digits": 14,
        "prefix_required": true
      },
      "use_cases": ["Standard organizations", "Regional courts", "Medium-scale processing"],
      "examples": {
        "valid": ["ABC 12345678", "ABC 12345678901234"],
        "invalid": ["ABC 1234567", "ABC 123456789012345"]
      }
    },

    "long_range": {
      "description": "Long ID range for complex systems",
      "validation_rules": {
        "min_digits": 10,
        "max_digits": 20,
        "prefix_required": true
      },
      "use_cases": ["Large organizations", "Complex tracking", "Enterprise systems"],
      "examples": {
        "valid": ["ABC 1234567890", "ABC 12345678901234567890"],
        "invalid": ["ABC 123456789", "ABC 123456789012345678901"]
      }
    },

    "flexible_range": {
      "description": "Very flexible range for legacy or mixed systems",
      "validation_rules": {
        "min_digits": 1,
        "max_digits": 50,
        "prefix_required": false
      },
      "use_cases": ["Legacy systems", "Migration scenarios", "Mixed document types"],
      "examples": {
        "valid": ["1", "ABC 123", "1234567890123456789012345678901234567890"],
        "invalid": ["", "Non-numeric letters only"]
      }
    }
  },

