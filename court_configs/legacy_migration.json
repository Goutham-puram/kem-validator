{
  "description": "Legacy document migration configuration",
  "use_case": "Organizations migrating historical documents with flexible validation",
  "setup_instructions": [
    "Copy this configuration to courts_config.json",
    "LEG court accepts 1-50 digits (very flexible for old documents)",
    "Prefix not required for legacy documents",
    "Extended retention for historical preservation"
  ],

  "KEM": {
    "enabled": true,
    "name": "Kirkland Court",
    "description": "Standard current documents",
    "validation_rules": {
      "min_digits": 9,
      "max_digits": 13,
      "prefix_required": true
    },
    "directories": {
      "input_dir": "kem-inbox",
      "output_dir": "kem-output",
      "invalid_dir": "kem-invalid",
      "processed_dir": "kem-processed"
    },
    "archive": {
      "enabled": true,
      "retention_months": 6
    }
  },

  "LEG": {
    "enabled": true,
    "name": "Legacy Document Court",
    "description": "Historical document processing with flexible validation",
    "validation_rules": {
      "min_digits": 1,
      "max_digits": 50,
      "prefix_required": false
    },
    "directories": {
      "input_dir": "legacy-inbox",
      "output_dir": "legacy-output",
      "invalid_dir": "legacy-invalid",
      "processed_dir": "legacy-processed"
    },
    "archive": {
      "enabled": true,
      "retention_months": 120
    },
    "processing": {
      "batch_size": 25,
      "timeout_seconds": 900,
      "retry_attempts": 3
    },
    "ftp": {
      "enabled": false,
      "input_path": "/ftp/legacy/incoming",
      "output_path": "/ftp/legacy/processed"
    }
  },

  "global_settings": {
    "default_court": "LEG",
    "archive_base_dir": "archive",
    "database_path": "kem_validator.db",
    "backup_enabled": true,
    "logging_level": "INFO",
    "max_file_size_mb": 200,
    "allowed_extensions": [".txt", ".pdf", ".tiff", ".jpg", ".png"],
    "concurrent_courts": 2,
    "performance_monitoring": {
      "enabled": true,
      "report_interval_hours": 12
    }
  }
}