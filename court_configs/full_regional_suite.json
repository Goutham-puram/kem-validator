{
  "description": "Complete regional court suite (KEM + SEA + TAC)",
  "use_case": "Organizations processing documents for all major regional courts",
  "setup_instructions": [
    "Copy this configuration to courts_config.json",
    "Create all court directories: kem-*, sea-*, tac-*",
    "Each court has different validation ranges",
    "Default court is KEM for backward compatibility"
  ],

  "KEM": {
    "enabled": true,
    "name": "Kirkland Court",
    "description": "Primary court system - 9 to 13 digits",
    "validation_rules": {
      "min_digits": 9,
      "max_digits": 13,
      "prefix_required": true
    },
    "directories": {
      "input_dir": "kem-inbox",
      "output_dir": "kem-output",
      "invalid_dir": "kem-invalid",
      "processed_dir": "kem-processed"
    },
    "archive": {
      "enabled": true,
      "retention_months": 6
    },
    "ftp": {
      "enabled": false,
      "input_path": "/ftp/courts/kem/incoming",
      "output_path": "/ftp/courts/kem/processed"
    }
  },

  "SEA": {
    "enabled": true,
    "name": "Seattle Court",
    "description": "Seattle regional court - 8 to 12 digits",
    "validation_rules": {
      "min_digits": 8,
      "max_digits": 12,
      "prefix_required": true
    },
    "directories": {
      "input_dir": "sea-inbox",
      "output_dir": "sea-output",
      "invalid_dir": "sea-invalid",
      "processed_dir": "sea-processed"
    },
    "archive": {
      "enabled": true,
      "retention_months": 12
    },
    "ftp": {
      "enabled": false,
      "input_path": "/ftp/courts/sea/incoming",
      "output_path": "/ftp/courts/sea/processed"
    }
  },

  "TAC": {
    "enabled": true,
    "name": "Tacoma Court",
    "description": "Tacoma regional court - 10 to 14 digits",
    "validation_rules": {
      "min_digits": 10,
      "max_digits": 14,
      "prefix_required": true
    },
    "directories": {
      "input_dir": "tac-inbox",
      "output_dir": "tac-output",
      "invalid_dir": "tac-invalid",
      "processed_dir": "tac-processed"
    },
    "archive": {
      "enabled": true,
      "retention_months": 3
    },
    "ftp": {
      "enabled": false,
      "input_path": "/ftp/courts/tac/incoming",
      "output_path": "/ftp/courts/tac/processed"
    }
  },

  "global_settings": {
    "default_court": "KEM",
    "archive_base_dir": "archive",
    "database_path": "kem_validator.db",
    "backup_enabled": true,
    "logging_level": "INFO",
    "max_file_size_mb": 50,
    "allowed_extensions": [".txt", ".pdf", ".png", ".jpg"],
    "concurrent_courts": 3,
    "performance_monitoring": {
      "enabled": true,
      "report_interval_hours": 24
    }
  }
}