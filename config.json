{
  "input_dir": "kem-inbox",
  "output_dir": "kem-results",
  "processed_dir": "processed-archive",
  "invalid_dir": "invalid-archive",
  "ocr_provider": "tesseract",
  "openai_api_key": "",
  "azure_endpoint": "",
  "azure_key": "",
  "db_path": "kem_validator.db",
  "auto_watch": true,
  "process_interval": 5,
  "validation_rules": {
    "min_digits": 9,
    "max_digits": 13,
    "allow_alphanumeric": true,
    "kem_prefix_required": true
  },
  "file_settings": {
    "max_file_size_mb": 10,
    "allowed_extensions": [".txt", ".pdf", ".png", ".jpg", ".jpeg", ".tiff", ".bmp"],
    "encoding": "utf-8",
    "encoding_errors": "replace"
  },
  "logging": {
    "level": "INFO",
    "log_file": "kem_validator.log",
    "max_log_size_mb": 10,
    "backup_count": 5
  },
  "web_interface": {
    "port": 8501,
    "host": "localhost",
    "theme": "light",
    "auto_refresh_interval": 5
  }
}